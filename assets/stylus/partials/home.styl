body
    margin-left 0
    margin-right 0
    //width 100%
    height 100vh
    background-image url('/bomberman/assets/img/background.png')
    background-position left bottom
    background-repeat no-repeat
    //background-size contain
    
    .header
        width 100%
        height 50px
        background none
        padding 20px 20px 20px 20px
    
.player
    position absolute
    top 0
    left 0
    width 100px
    height 100px
    background-color none
    z-index 10
    transform translateX(0) translateY(0)
    transition all 0.1s ease-in
    
.game-set
    display block
    position relative
    width 0px
    height 0px
    margin 0 auto
    background #9BAAC3
    
.wall
    position absolute
    top 0
    left 0
    background-color #5F7292
    transform translateX(0) translateY(0)
    background-image url('/bomberman/assets/img/brick.svg')
    background-size contain


    